            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/icon_list" />
        <!--            </RelativeLayout>-->

        <TextView
            android:id="@+id/tv_che_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="14.5dp"
            android:text="冀A·51742"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_che_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_che_no"
            android:layout_alignStart="@+id/tv_che_no"
            android:layout_marginTop="8.5dp"
            android:text="丰田卡罗拉 2010 1.8T运动款"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:text="李某某  188888888"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </RelativeLayout>
