    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_corners_ffffff_dp10">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@+id/tv_che_type"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_corners_3477fc_dp2"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="继续编辑"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_che_no"
            android:layout_alignBottom="@+id/tv_edit"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="日期：2022-06-08"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:drawableStartCompat="@mipmap/icon_date" />
