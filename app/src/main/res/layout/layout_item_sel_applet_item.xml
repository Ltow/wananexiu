<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <CheckBox
        android:id="@+id/cb_sel_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        android:button="@drawable/checkbox_button4" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="75dp"
        android:text="普洗"
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/et_price_item"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="193dp"
        android:background="@drawable/shape_stroke_cccccc_corners_dp0"
        android:gravity="center"
        android:inputType="numberDecimal"

        android:textColor="#ff666666"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:text="详情"
        android:textColor="#fffc8a25"
        android:textSize="13sp" />
</RelativeLayout>