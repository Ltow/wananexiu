<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jishi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_corners_eef9ff_dp5" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_corners_198cff_dp13"
                android:gravity="center"
                android:text="门店技师"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_layout_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_corners_eef9ff_dp5" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_corners_198cff_dp13"
                android:gravity="center"
                android:text="门店评价"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_layout_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_corners_eef9ff_dp5">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_pic"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="门店详情介绍文案"
                    android:textColor="#ff666666"
                    android:textSize="13sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_corners_198cff_dp13"
                android:gravity="center"
                android:text="门店相册"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_layout_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_corners_eef9ff_dp5" />

            <ImageView
                android:layout_width="88dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="59dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/yingyezhizhao" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_corners_198cff_dp13"
                android:gravity="center"
                android:text="营业执照"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_layout_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_corners_eef9ff_dp5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:text="设备详情内容介绍文案"
                android:textColor="#ff000000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_corners_198cff_dp13"
                android:gravity="center"
                android:text="设备详情"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>