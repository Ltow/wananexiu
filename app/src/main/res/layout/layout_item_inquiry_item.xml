<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gys_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="13dp"
        android:text="张伟供应商"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_offer_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8.5dp"
        android:text="已发未报价"
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_price_inquiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:textColor="#ffe60012"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_bj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/tv_price_inquiry"
        android:text="报价："
        android:visibility="gone"
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_bz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gys_name"
        android:layout_marginStart="14dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginBottom="14.5dp"
        android:text="报价备注：博士原厂，现货， 含物流费，送货上门"
        android:textColor="#ff666666"
        android:textSize="12sp" />
</RelativeLayout>