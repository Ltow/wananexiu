<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_goods_pic1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/iv_pic"
        android:text="V5乐驰 SN 5W-30 小保养"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginTop="8dp"
        android:text="众多原厂认证 高效节油 强劲动力"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_nd"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@+id/tv_summary"
        android:layout_alignStart="@+id/tv_summary"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corners_198cff_dp2_0_2_0"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="原厂粘度"
        android:textColor="#ffffffff"
        android:textSize="8sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/tv_nd"
        android:layout_toEndOf="@+id/tv_nd"
        android:background="@drawable/shape_stroke_bbbbbb_dp0_2_0_2"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="5W-30"
        android:textColor="#ff333333"
        android:textSize="8sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nd"
        android:layout_alignStart="@+id/tv_nd"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥616"
            android:textColor="#ffff2e2e"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/tv_price"
            android:text="￥914"
            android:textColor="#ff666666"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_nd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_gradient_fc6c25_ff301e_dp18"
        android:gravity="center"
        android:text="抢购"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>