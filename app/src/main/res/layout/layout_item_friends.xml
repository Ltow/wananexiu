<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_friends_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_stroke_corners_dp2" />

    <TextView
        android:id="@+id/tv_name_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.5dp"
        android:layout_marginTop="14.5dp"
        android:layout_toEndOf="@+id/iv_friends_item"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_friends"
        android:layout_alignStart="@+id/tv_name_friends"
        android:layout_marginTop="12.5dp"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts"
        android:layout_alignStart="@+id/tv_contacts"
        android:layout_marginTop="8.5dp"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_business_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address"
        android:layout_marginStart="21.5dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginEnd="21.5dp"
        android:layout_marginBottom="21dp"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cb_item_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22.5dp"
        android:layout_marginEnd="15dp"
        android:button="@drawable/checkbox_button4" />
</RelativeLayout>