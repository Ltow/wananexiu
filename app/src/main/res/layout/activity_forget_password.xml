<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_forget_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:leftIcon="@mipmap/icon_left"
        app:lineVisible="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_forget_password"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="26.5dp"
            android:text="修改密码"
            android:textColor="#ff333333"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_phone_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="39.5dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="39.5dp"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28.5dp">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="39.5dp"
                android:layout_marginEnd="39.5dp"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:selectAllOnFocus="true"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_get_verification"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shape_stroke_cccccc_corners_dp0"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text="获取验证码"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="39.5dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="39.5dp"
            android:hint="新密码"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_new_pass_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="39.5dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="39.5dp"
            android:hint="确认密码"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sure_forget"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_stroke_cccccc_dp6"
            android:gravity="center"
            android:onClick="onClick"
            android:text="确定"
            android:textColor="#ff999999"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>