<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/icon_shape_1887" />

    <TextView
        android:id="@+id/tv_name_replenishment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="13.5dp"
        android:text="邓邓登汽修厂"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_content_replenishment_details"
        android:layout_width="330dp"
        android:layout_height="77dp"
        android:layout_below="@+id/tv_name_replenishment_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@color/color_layout_bg">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_tate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32.5dp"
            android:text="下单时间：2020年5月16日 12点45分40秒"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="53.5dp"
            android:text="倒计时："
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_count_down_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="53.5dp"
            android:textColor="#fffc2525"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_check_details_replenishment"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_below="@+id/rl_content_replenishment_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10.5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10.5dp"
        android:background="@drawable/shape_stroke_theme_corners_dp5"
        android:gravity="center"
        android:text="查看详情"
        android:textColor="#ff224bbe"
        android:textSize="12sp" />
</RelativeLayout>