<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="7.5dp"
    android:layout_marginEnd="7.5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="56dp"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_corners_e3e3e3_dp12_5"
        android:gravity="center"
        android:text="默认"
        android:textColor="#ff6f6f6f"
        android:textSize="12sp" />

    <!--    <RelativeLayout-->
    <!--        android:layout_width="140dp"-->
    <!--        android:layout_height="286dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:background="@drawable/shape_corners_cccccc_dp12_5">-->

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corners_cccccc_dp12_5"
        android:src="@mipmap/icon_preview1" />
    <!--    </RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="56dp"
            android:layout_height="21dp"
            android:background="@drawable/shape_corners_e3e3e3_dp12_5"
            android:gravity="center"
            android:text="使用中"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_load"
            android:layout_width="56dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_corners_3477fc_dp_12_5"
            android:gravity="center"
            android:text="预览"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>