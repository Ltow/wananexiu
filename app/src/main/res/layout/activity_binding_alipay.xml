<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_binding_alipay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:barStyle="light"
        app:leftIcon="@mipmap/icon_left"
        app:title="绑定支付宝"
        app:titleSize="17sp"
        app:titleStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_binding_alipay"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16.5dp"
            android:text="真实姓名"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_ali_real_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:hint="请输入您的真实姓名"
            android:textColor="@color/color_black"
            android:textColorHint="#ff999999"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#EEEEEE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16.5dp"
            android:text="支付宝账号"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_ali_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:hint="请输入您的支付宝账号"
            android:textColor="@color/color_black"
            android:textColorHint="#ff999999"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/tv_submit_to"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="91dp"
            android:background="#224BBE"
            android:gravity="center"
            android:onClick="onClick"
            android:text="确认提交"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>