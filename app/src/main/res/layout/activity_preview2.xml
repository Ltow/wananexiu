<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_preview_pic1" />

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_preview2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        app:leftIcon="@mipmap/icon_left"
        app:lineVisible="false" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_preview2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="23dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/shape_corners_000000_dp10_10_0_0"
                android:gravity="center"
                android:text="营业时间：08:30~18:30"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/shape_corners_ffffff_dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:text="【万鞍E家】中华南大街店"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:text="总评分 "
                        android:textColor="#ff666666"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 5.00"
                        android:textColor="#000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="9dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="10dp"
                        android:background="#CACACA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:text="订单 "
                        android:textColor="#ff666666"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 999"
                        android:textColor="#000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="门店负责人：张三"
                        android:textColor="#ff333333"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/icon_3985" />

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_cce6ff"
                        android:gravity="center"
                        android:text="免"
                        android:textColor="#1F8BF0"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="免费提供1项检测"
                        android:textColor="#ff333333"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="113dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shape_stroke_d9d9d9_dp10"
                    android:scaleType="center"
                    android:src="@mipmap/icon_preview2_phone" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll2"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toStartOf="@+id/iv_call"
                    android:drawablePadding="10dp"
                    android:text="河北省石家庄市桥西区中华南大街祥和路东头10米路西1号    5.99km"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:drawableStartCompat="@mipmap/icon_address_location" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_corners_ffffff_dp10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_zyfw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zyfw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="服务"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v_zyfw"
                        android:layout_width="27dp"
                        android:layout_height="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:background="@drawable/shape_gradient_139bf1_96d3f9_dp1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zysp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zysp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="商品"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v_zysp"
                        android:layout_width="27dp"
                        android:layout_height="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:background="@drawable/shape_gradient_139bf1_96d3f9_dp1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="评价"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v_pj"
                        android:layout_width="27dp"
                        android:layout_height="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:background="@drawable/shape_gradient_139bf1_96d3f9_dp1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="商家"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v_sj"
                        android:layout_width="27dp"
                        android:layout_height="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:background="@drawable/shape_gradient_139bf1_96d3f9_dp1" />
                </LinearLayout>
            </LinearLayout>

            <com.bossed.waej.customview.ScrollViewPager
                android:id="@+id/ns_vp_preview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>