<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/icon_purchase_order" />

    <TextView
        android:id="@+id/tv_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10.5dp"
        android:layout_toEndOf="@+id/iv_order_type"
        android:text="补货订单"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_delivery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:text="待发货"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_item_repair_content"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_order_type"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:background="@color/color_layout_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_id_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:text="订单号：1258746522"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_add_time_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="下单时间：2020年5月16日 12点45分40秒"
            android:textColor="#ff333333"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_check_details_repair"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_below="@+id/ll_item_repair_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_stroke_theme_corners_dp5"
        android:gravity="center"
        android:text="查看详情"
        android:textColor="#ff224bbe"
        android:textSize="12sp" />
</RelativeLayout>