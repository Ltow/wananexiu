<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_head_preview" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:src="@mipmap/icon_vip_preview" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/iv_head"
        android:text="游客"
        android:textColor="#ff000000"
        android:textSize="13sp" />

    <RatingBar
        style="@style/RatingBarRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/iv_head"
        android:rating="5" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="21dp"
        android:text="2023-08-31"
        android:textColor="#ff999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginStart="64dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="34dp"
        android:text="技术熟练，仔细认真。操作规范，环境干净整洁。排队时间短效率高。"
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_content"
        android:layout_alignStart="@+id/tv_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_pj_pic" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/iv1"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv1"
        android:src="@mipmap/icon_pj_pic" />

    <include
        layout="@layout/line_eee_s_e_dp15"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp" />
</RelativeLayout>