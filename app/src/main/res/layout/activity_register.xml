<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_register_bg" />

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        app:leftIcon="@mipmap/icon_left"
        app:leftIconTint="@color/white"
        app:lineVisible="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_register"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="欢迎使用万鞍E修!"
            android:textColor="#fffefefe"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="注册"
            android:textColor="#fffefefe"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_corners_ffffff_dp6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="企业信息："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_name_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="87dp"
                    android:layout_marginEnd="40dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:hint="请输入企业信息"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="姓名："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="87dp"
                    android:layout_marginEnd="40dp"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:maxLength="10"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="手机号  ："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_phone_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="87dp"
                    android:layout_marginEnd="40dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="密码 ："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_pass_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="87dp"
                    android:layout_marginEnd="40dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:selectAllOnFocus="true"
                    android:hint="请输入密码"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:id="@+id/ll_verification"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="验证码  ："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_verification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="87dp"
                    android:layout_toStartOf="@+id/tv_get_verification"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_get_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:onClick="onRepeatClick"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:text="获取验证码"
                    android:textColor="#E60012"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/v_verification"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="邀请码  ："
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_invitation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="87dp"
                    android:background="@null"
                    android:hint="请输入邀请码(选填)"
                    android:maxLength="6"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:text="代理商名称：张三那"
                android:textColor="@color/purple_200"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="代理商手机：18633333333"
                android:textColor="@color/purple_200"
                android:textSize="13sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="26dp"
                    android:button="@drawable/checkbox_button4"
                    android:paddingStart="5dp"
                    android:text="已阅读并同意"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:onClick="onRepeatClick"
                    android:paddingTop="8dp"
                    android:text="《注册协议》"
                    android:textColor="#E60012"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:onClick="onRepeatClick"
                    android:paddingTop="8dp"
                    android:text="《隐私政策》"
                    android:textColor="#E60012"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="250dp"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_stroke_cccccc_dp6"
                android:gravity="center"
                android:onClick="onRepeatClick"
                android:text="下一步"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>