<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gys_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="14dp"
        android:text="张伟供应商"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="14dp"
        android:text="报价："
        android:textColor="#ff666666"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/tv_total"
        android:text="￥758"
        android:textColor="#ffe60012"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/cb_quoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:button="@drawable/checkbox_button4"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tv_bz_quoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gys_name"
        android:layout_alignStart="@+id/tv_gys_name"
        android:layout_marginTop="9.5dp"
        android:layout_marginEnd="30dp"
        android:text="报价备注：博士原厂，现货， 含物流费，送货上门"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_bz_quoted"
        android:layout_marginTop="13.5dp"
        android:background="#EEEEEE" />
</RelativeLayout>